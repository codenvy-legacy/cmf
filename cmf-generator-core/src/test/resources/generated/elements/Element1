package my.package.client.elements;

import com.google.gwt.xml.client.Node;
import java.util.Arrays;

public class Element1 extends MainElement {

    private Integer property1;

    public Element1() {
        super("Element1", Arrays.asList("Property1"));
        property1 = 10;
    }

    public Integer getProperty1() {
        return property1;
    }

    public void setProperty1(Integer property1) {
        this.property1 = property1;
    }

    @Override
    protected String serializeProperties() {
        StringBuilder properties = new StringBuilder();
        properties.append("<").append("Property1").append(">\n")
        .append(property1).append("\n")
        .append("</").append("Property1").append(">\n");
        return properties.toString();
    }

    @Override
    public void applyProperty(Node node) {
        String nodeName = node.getNodeName();
        String nodeValue = node.getChildNodes().item(0).getNodeValue();

        switch (nodeName) {
            case "Property1":
                property1 = Integer.valueOf(nodeValue);
            break;
        }
    }

}
